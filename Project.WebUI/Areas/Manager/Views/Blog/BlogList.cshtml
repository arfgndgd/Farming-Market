@model BlogVM
@{
    ViewBag.Title = "BlogList";
}

<h3>Blog Yazısı eklemek için @Html.ActionLink("tıklayınız", "AddBlog")</h3>

<br />
<br />
<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th class="hidden-phone">ID</th>
                    <th class="hidden-phone">Resim</th>
                    <th class="hidden-phone">Başlık</th>
                    <th class="hidden-phone">Blog Yazısı</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                    <th class="hidden-phone">Kaldır</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Blog item in Model.Blogs)
                {
                    <tr class="gradeX">
                        <td><img width="30" height="30" title="@item.Title" src="@item.ImagePath" /> </td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                       
                        <td class="hidden-phone">@item.Status</td>

                        <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteBlog", new { id = item.ID }, new { @class = "btn btn-danger" })</td>

                        <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateBlog", new { id = item.ID }, new { @class = "btn btn-warning" })</td>

                        <td class="center hidden-phone">@Html.ActionLink("Kaldır", "DestroyBlog", new { id = item.ID }, new { @class = "btn btn-dark" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
