@model ShipperVM
@{
    ViewBag.Title = "AddShipper";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading"><h2>Kargo/Nakliye Firması Ekleme Sayfası</h2></header>
            <div class="panel-body">
                <div class="adv-table editable-table ">
                    @using (Html.BeginForm("AddShipper", "Shipper", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <section class="panel">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Firma İsmi</label>
                                            <div class="col-sm-4">
                                                @Html.TextBoxFor(x => x.Shipper.ShipperName, new { @class = "form-control genislik", placeholder = "Firma İsmi Giriniz" })
                                            </div>
                                        </div>

                                        <br /> <br />

                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Telefon No</label>
                                            <div class="col-sm-4">
                                                @Html.TextBoxFor(x => x.Shipper.Phone, new { @class = "form-control genislik", placeholder = "Telefon No Giriniz" })
                                            </div>
                                        </div>

                                        <br /> <br />

                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">E-Posta</label>
                                            <div class="col-sm-4">
                                                @Html.TextBoxFor(x => x.Shipper.Email, new { @class = "form-control genislik", placeholder = "E-Posta Giriniz" })
                                            </div>
                                        </div>

                                        <br /> <br />

                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                <button class="btn btn-primary">
                                                    Firma Ekle
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->