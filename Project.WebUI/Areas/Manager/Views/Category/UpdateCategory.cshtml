@model CategoryVM
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Category.ID)
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">Kategori Güncelleme Sayfası</header>
                <div class="panel-body">
                    @*...Resim eklenebilir...
                    <div class="form-group">
                         <label class="col-sm-2 col-sm-2 control-label">Resim Seçiniz</label>
                         <div class="col-sm-10">
                             <input type="file" name="resim" class="form-control genislik" />
                         </div>
                    </div>*@

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label"> İsim </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik", placeholder = "Kategori İsmini Güncelleyiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label"> Açıklama </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik", placeholder = "Kategori Açıklaması Güncelleyiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Kategori Güncelle
                            </button>
                        </div>
                    </div>



                </div>


            </section>
        </div>
    </div>
}

