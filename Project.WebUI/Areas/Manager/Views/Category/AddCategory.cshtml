@model CategoryVM
@{
    ViewBag.Title = "AddCategory";
}

<style>
    .genislik{
        width: 300px;
    }
</style>

@using(Html.BeginForm("AddCategory","Category",FormMethod.Post, new { enctype="multipart/form-date"}))
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <h4 class="panel-heading">Kategori Ekleme Sayfası</h4>
                <br /> <br />
                <div class="panel-body">
                    @*...Resim eklenebilir...
            <div class="form-group">
                 <label class="col-sm-2 col-sm-2 control-label">Resim Seçiniz</label>
                 <div class="col-sm-10">
                     <input type="file" name="resim" class="form-control genislik" />
                 </div>
            </div>*@

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori İsmi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik", placeholder = "Kategori İsmi Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik", placeholder = "Açıklama Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Kategori Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
}
