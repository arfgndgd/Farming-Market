@model StorageVM
@{
    ViewBag.Title = "AddStorage";
}

<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm("AddStorage", "Storage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <h4 class="panel-heading">Stok Ürün Ekleme Sayfası</h4>
                <br /> <br />
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Resim Seçiniz</label>
                        <div class="col-sm-10">
                            <input type="file" name="resim" class="form-control genislik" />
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">İsim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Storage.ProductName, new { @class = "form-control genislik", placeholder = "Stok Ürün İsmini Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Fiyat</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Storage.UnitInPrice, new { @class = "form-control genislik", placeholder = "Stok Ürün Fiyatı Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Toplam Ağırlık</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Storage.TotalWeight, new { @class = "form-control genislik", placeholder = "Toplam Ağırlık Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Stok Kategorisi</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Storage.StorageCategoryID, new SelectList(Model.StorageCategories, "ID", "StorageCategoryName"), "Lütfen Seçiniz")
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Tedarikçi</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Storage.SupplierID, new SelectList(Model.Suppliers, "ID", "SupplierName"), "Lütfen Seçiniz")
                        </div>
                    </div>

                    <br /><br />



                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Stok Ürün Ekle
                            </button>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
}


