@model StorageVM
@{
    ViewBag.Title = "UpdateStorage";
}


<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading"><h2>Ambar Ürün Güncelleme Sayfası</h2></header>
            <div class="panel-body">
                <div class="adv-table editable-table ">
                   @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(x => x.Storage.ID)
                        <div class="row">
                            <div class="col-lg-12">
                                <section class="panel">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">İsim</label>
                                            <div class="col-sm-4">
                                                @Html.TextBoxFor(x => x.Storage.ProductName, new { @class = "form-control genislik", placeholder = "Ambar Ürün İsmini Güncelleyiniz" })
                                            </div>
                                        </div>

                                        <br /> <br />

                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Fiyat</label>
                                            <div class="col-sm-4">
                                                @Html.TextBoxFor(x => x.Storage.UnitInPrice, new { @class = "form-control genislik", placeholder = "Ambar Ürün Fiyatı Güncelleyiniz" })
                                            </div>
                                        </div>

                                        <br /> <br />

                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Toplam Ağırlık</label>
                                            <div class="col-sm-4">
                                                @Html.TextBoxFor(x => x.Storage.TotalWeight, new { @class = "form-control genislik", placeholder = "Toplam Ağırlık Güncelleyiniz" })
                                            </div>
                                        </div>

                                        <br /> <br />

                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Ambar Kategorisi</label>
                                            <div class="col-sm-4">
                                                @Html.DropDownListFor(x => x.Storage.StorageCategoryID, new SelectList(Model.StorageCategories, "ID", "StorageCategoryName"), "Lütfen Seçiniz")
                                            </div>
                                        </div>

                                        <br /> <br />

                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Tedarikçi</label>
                                            <div class="col-sm-4">
                                                @Html.DropDownListFor(x => x.Storage.SupplierID, new SelectList(Model.Suppliers, "ID", "SupplierName"), "Lütfen Seçiniz")
                                            </div>
                                        </div>

                                        <br /><br />

                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Resim Seçiniz</label>
                                            <div class="col-sm-4">
                                                <input type="file" name="resim" class="form-control genislik" />
                                            </div>
                                        </div>

                                        <br /> <br />

                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                <button class="btn btn-primary">
                                                    Ambar Ürün Güncelle
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->
