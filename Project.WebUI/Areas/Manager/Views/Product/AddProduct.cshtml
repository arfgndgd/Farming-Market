@model ProductVM
@{
    ViewBag.Title = "AddProduct";
}


<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <h4 class="panel-heading">Ürün Ekleme Sayfası</h4>
                <br /> <br />
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Resim Seçiniz</label>
                        <div class="col-sm-10">
                            <input type="file" name="resim" class="form-control genislik" />
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">İsim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control genislik", placeholder = "Ürün İsmini Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Fiyat</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control genislik", placeholder = "Ürün Fiyatı Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Stok</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.UnitInStock, new { @class = "form-control genislik", placeholder = "Ürün Stok Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lütfen Seçiniz")
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Tedarikçi</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Product.SupplierID, new SelectList(Model.Suppliers, "ID", "SupplierName"), "Lütfen Seçiniz")
                        </div>
                    </div>

                    <br /><br />



                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Ürün Ekle
                            </button>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
}

