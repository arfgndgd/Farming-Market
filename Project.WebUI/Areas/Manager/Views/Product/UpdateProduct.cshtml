@model ProductVM
@{
    ViewBag.Title = "UpdateProduct";
}


<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Product.ID)
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">Ürün Güncelleme Sayfası</header>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">İsim</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control genislik", placeholder = "Ürün İsmini Güncelleyiniz" })
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Fiyat</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control genislik", placeholder = "Ürün Fiyatı Güncelleyiniz" })
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Stok</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Product.UnitInStock, new { @class = "form-control genislik", placeholder = "Ürün Stok Güncelleyiniz" })
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Kategori</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lütfen Seçiniz")
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Tedarikçi</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(x => x.Product.SupplierID, new SelectList(Model.Suppliers, "ID", "SupplierName"), "Lütfen Seçiniz")
                    </div>
                </div>

                <br /><br />

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Resim Seçiniz</label>
                    <div class="col-sm-10">
                        <input type="file" name="resim" class="form-control genislik" />
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label"> Ekle </label>
                    <div class="col-sm-10">
                        <button class="btn btn-primary">
                            Ürün Güncelle
                        </button>
                    </div>
                </div>

            </section>
        </div>
    </div>
}