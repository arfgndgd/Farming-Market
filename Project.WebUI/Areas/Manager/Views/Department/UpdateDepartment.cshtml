@model DepartmentVM
@{
    ViewBag.Title = "UpdateDepartment";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <section class="panel">
            <header class="panel-heading"><h2>Departman Güncelleme Sayfası</h2></header>
            <div class="panel-body">
                <div class="adv-table editable-table ">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label"> Departman İsmi </label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.Department.DepartmentName, new { @class = "form-control genislik", placeholder = "Departman İsmini Güncelleyiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label"> Açıklama </label>
                        <div class="col-sm-4">
                            @Html.TextAreaFor(x => x.Department.Description, new { @class = "form-control genislik", placeholder = "Departman Açıklaması Güncelleyiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <br /> <br />

                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Departman Güncelle
                            </button>
                        </div>
                    </div>



                </div>
            </div>
        </section>
        <!-- page end-->
    </section>
</section>
<!--main content end-->