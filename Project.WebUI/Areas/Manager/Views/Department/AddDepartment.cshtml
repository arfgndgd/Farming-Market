@model DepartmentVM
@{
    ViewBag.Title = "AddDepartment";
}

<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm("AddDepartment", "Department", FormMethod.Post, new { enctype = "multipart/form-date" }))
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">Departman Ekleme Sayfası</header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Departman İsmi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Department.DepartmentName, new { @class = "form-control genislik", placeholder = "Departman İsmi Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Department.Description, new { @class = "form-control genislik", placeholder = "Açıklama Giriniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Departman Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
}


