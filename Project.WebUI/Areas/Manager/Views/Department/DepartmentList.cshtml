@model DepartmentVM
@{
    ViewBag.Title = "DepartmentList";
}

<h3>Departman eklemek için @Html.ActionLink("Tıklayınız", "AddDepartment")</h3>
<br /><br />
<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th class="hidden-phone">ID</th>
                    <th class="hidden-phone">Departman</th>
                    <th class="hidden-phone">Açıklama</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                    <th class="hidden-phone">Kaldır</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Department item in Model.Departments)
                {
                    <tr class="gradeX">
                        <td>@item.ID</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteDepartment", new { id = item.ID }, new { @class = "btn btn-danger" })</td>

                        <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateDepartment", new { id = item.ID }, new { @class = "btn btn-warning" })</td>

                        <td class="center hidden-phone">@Html.ActionLink("Kaldır", "DestroyDepartment", new { id = item.ID }, new { @class = "btn btn-dark" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


