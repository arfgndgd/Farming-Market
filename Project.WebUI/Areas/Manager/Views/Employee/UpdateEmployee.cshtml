@model EmployeeVM
@{
    ViewBag.Title = "UpdateEmployee";
}

<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Employee.ID)
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">Çalışan Güncelleme Sayfası</header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Resim Seçiniz</label>
                        <div class="col-sm-10">
                            <input type="file" name="resim" class="form-control genislik" />
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">TCNO</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Employee.TCNO, new { @class = "form-control genislik", placeholder = "TC No Güncelleyiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">İsim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Employee.FirstName, new { @class = "form-control genislik", placeholder = "İsim Güncelleyiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Soyisim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Employee.LastName, new { @class = "form-control genislik", placeholder = "Soyisim Güncelleyiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Departman</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Employee.DepartmentID, new SelectList(Model.Departments, "ID", "CategoryName"), "Lütfen Seçiniz")
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">e-Posta</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Employee.Email, new { @class = "form-control genislik", placeholder = "e-Posta Güncelleyiniz" })
                        </div>
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Telefon No</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Employee.Phone, new { @class = "form-control genislik", placeholder = "Telefon No Güncelleyiniz" })
                        </div>
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Adres</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(x => x.Employee.Address, new { @class = "form-control genislik", @style = "resize:none", placeholder = "Adres Güncelleyiniz" })
                        </div>
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Şehir</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Employee.City, new { @class = "form-control genislik", placeholder = "Şehir Güncelleyiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Cinsiyet</label>
                        <div class="col-sm-10">
                            @Html.EnumDropDownListFor(x => x.Employee.Gender, new { @class = "form-control genislik", placeholder = "Lütfen Seçiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Rol</label>
                        <div class="col-sm-10">
                            @Html.EnumDropDownListFor(x => x.Employee.ERole, new { @class = "form-control genislik", placeholder = "Lütfen Seçiniz" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Çalışan Güncelle
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
}

