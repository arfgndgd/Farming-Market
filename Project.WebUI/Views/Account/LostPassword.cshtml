@model AppUserVM
@{
    ViewBag.Title = "LostPassword";
}
<body>
    <div>
        @if (ViewBag.Metin != null)
        {
            <div style="margin-top:60px" class="alert alert-warning text-center">@ViewBag.Metin</div>
        }
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8 col-md-8">
                <div class="box_account">
                    <div class="form_container">
                        <br />
                        <p style="font-size:14pt; font-family:'Roboto'" class="text-center top"><b>Sifre sıfırlama işlemini başlatmak için sisteme kayıtlı e-posta adresinizi giriniz</b></p>
                        <br />

                        @using (Html.BeginForm("LostPassword", "Account", FormMethod.Post))
                        {
                            if (ViewBag.AktifDegil != null)
                            {
                                <h2>@ViewBag.AktifDegil</h2>
                            }

                            @Html.TextBoxFor(x => x.AppUser.Email, new { @class = "form-control", placeholder = "Email giriniz" })

                            <br />

                            <div class="text-center"><input type="submit" value="Şifremi sıfırla" class="btn_1 full-width"></div>

                        }
                        <br />
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <br />
    </div>
</body>
