@model AppUserVM
@{
    ViewBag.Title = "ResetPassword";
}
<body>
    <div>
       
        @if (TempData["Reset"] != null)
        {
            <h2>@TempData["Reset"]</h2>
        }
        
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8 col-md-8">
                <div class="box_account">
                    <div class="form_container">
                        <br />
                        <br />

                       @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                        {

                            @Html.PasswordFor(x => x.AppUser.Password, new { @class = "form-control", placeholder = "Şifre giriniz" })
                            @Html.ValidationMessageFor(x => x.AppUser.Password)
                            <br />

                            @Html.PasswordFor(x => x.AppUser.ConfirmPassword, new { @class = "form-control", placeholder = "Şifre tekrarı giriniz" })
                            @Html.ValidationMessageFor(x => x.AppUser.ConfirmPassword)

                            <br />
                            <div class="text-center"><input type="submit" value="Şifremi sıfırla" class="btn_1 full-width"></div>
                        }
                        <br />
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

