@model AppUserVM
@{
    ViewBag.Title = "RegisterNow";
    //ViewBag.Title = "Login";
}

    <main class="bg_gray">

        <div class="container margin_30">
            <div class="page_header">
                <div class="breadcrumbs">
                    <ul>
                        <li><a href="@Url.Action("About","Page")">Home</a></li>
                        <li><a>Create Account</a></li>
                    </ul>
                </div>
                <h1>Create an Account or @Html.ActionLink("Sing In","Login","Account")</h1>
            </div>
            <!-- /page_header -->
            <div class="row justify-content-center">
                
                <div class="col-xl-6 col-lg-6 col-md-8">
                    <div class="box_account">
                        <h3 class="new_client">New Client</h3> <small class="float-right pt-2">* Required Fields</small>
                        <div class="form_container">
                           @using (Html.BeginForm("RegisterNow", "Register", FormMethod.Post, new { @class = "form-signin" }))
                            {
                                if (ViewBag.ZatenVar != null)
                                {
                                    <h2>@ViewBag.ZatenVar</h2>
                                }
                                @Html.TextBoxFor(x => x.AppUser.Email, new { @class = "form-control", placeholder = "E-mail adresinizi yazınız" })

                                @Html.TextBoxFor(x => x.UserProfile.FirstName, new { @class = "form-control", placeholder = "İsminizi yazınız" })

                                @Html.TextBoxFor(x => x.UserProfile.LastName, new { @class = "form-control", placeholder = "Soyadınızı yazınız" })

                                @Html.TextBoxFor(x => x.AppUser.UserName, new { @class = "form-control ", placeholder = "Kullanıcı ismi belirleyiniz" })
                                @Html.ValidationMessageFor(x => x.AppUser.UserName)

                                @Html.PasswordFor(x => x.AppUser.Password, new { @class = "form-control", placeholder = "Şifre belirleyiniz" })
                                @Html.ValidationMessageFor(x => x.AppUser.Password)

                                @Html.PasswordFor(x => x.AppUser.ConfirmPassword, new { @class = "form-control", placeholder = "Şifre tekrar" })
                                @Html.ValidationMessageFor(x => x.AppUser.ConfirmPassword)

                                @Html.TextBoxFor(x => x.UserProfile.Phone, new { @class = "form-control", placeholder = "Telefon No Giriniz" })

                                @Html.TextAreaFor(x => x.UserProfile.Address, new { @class = "form-control", placeholder = "Adres Giriniz" })
                                <hr>
                            
                                <div class="text-center"><input type="submit" value="Register" class="btn_1 full-width"></div>
                            }


                        </div>
                        <!-- /form_container -->
                    </div>
                    <!-- /box_account -->
                    <br />
                    <br />
                    <br />
                    <br />
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </main>


