@model OrderVM
@{
    ViewBag.Title = "SiparisiOnayla";
    //ViewBag.Title = "CartPage";
}


<main class="bg_gray">


    <div class="container margin_30">
        <!-- /page_header -->
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="step first">
                    <h3>1. Create Account Or Login</h3>
                        <div class="box_account">
                            <div class="form_container">
                                    <div class="form-group">
                                        <div class="col-sm-10">
                                            <h4>*Eğer hesabınız aktifse bu adımı atlayabilirsiniz</h4>
                                            <br />
                                            <h4>*Siparişi tamamlamak için üye olmak zorunda değilsiniz(*önerilmez)</h4>
                                            <br />
                                            <hr />
                                            <button type="button" class="btn_1 gray">@Html.ActionLink("GO", "RegisterNow", "Register")</button>
                                        </div>
                                    </div>
                            </div>
                        </div>
                </div>
                <!-- /step -->
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="step middle payments">
                    <h3>2. Payment and Shipping</h3>
                    
                    <div class="box_account">
                        <div class="form_container">
                           @using (Html.BeginForm("SiparisiOnayla", "Shopping", FormMethod.Post, new { @class = "form-horizontal tasi-form" }))
                            {
                                <div>
                                    @Html.TextBoxFor(x => x.PaymentVM.CardNumber, new { @class = "form-control", placeholder = "Kart Numarası" })
                                    
                                    @Html.TextBoxFor(x => x.PaymentVM.SecurityNumber, new { @class = "form-control", placeholder = "Kart Güvenlik Numarası" })
                                    @Html.TextBoxFor(x => x.PaymentVM.CardExpiryYear, new { @class = "form-control", placeholder = "Kart Son Kullanım Yılı" })
                                    
                                    @Html.TextBoxFor(x => x.PaymentVM.CardExpiryMonth, new { @class = "form-control", placeholder = "Kart Son Kullanım Ayı" })
                                    @Html.TextBoxFor(x => x.PaymentVM.CardUserName, new { @class = "form-control", placeholder = "Kart Üzerindeki İsim" })
                                    
                                    @Html.TextBoxFor(x => x.Order.Email, new { @class = "form-control", placeholder = "E-Posta Adresi" })
                                   
                                    @Html.TextBoxFor(x => x.Order.ShippedCountry, new { @class = "form-control", placeholder = "Ülke" })
                                    
                                    @Html.TextBoxFor(x => x.Order.ShippedCity, new { @class = "form-control", placeholder = "Şehir" })
                                    
                                    @Html.TextAreaFor(x => x.Order.ShippedAddress, new { @class = "form-control", placeholder = "Sipariş Adresi" })
                                    
                                    <br />
                                    @Html.DropDownListFor(x => x.Order.ShipperID, new SelectList(Model.Shippers, "id", "ShipperName"), "Lütfen Seçiniz")
                                </div>
                                <br />                                
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <button type="button"class="btn_1 full-width">Onay</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
                <!-- /step -->

